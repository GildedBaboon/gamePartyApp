<!DOCTYPE html>
<html>
  <head>
    {{>head}}
  </head>
  <body>
  <div class="wrapper">
    <div class="register-background">
      <div class="filter-black"></div>
        <div class="container" style="margin-top:5%">
          <div class="row">
            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1 ">
              <div class="register-card">
                <h2 class="title">Register</h2>
                <form class="register-form" action="/register" method="POST">
                  <label>Name</label>
                  <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name" />
                  <label>Email</label>
                  <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" />
                  <label>Display Name</label>
                  <input type="name" id="display_name" name="display_name" class="form-control"
                    placeholder="Enter Display Name" />
                  <label>Password</label>
                  <input type="password" id="password" name="password" class="form-control"
                    placeholder="Create Password" />
                  <label>Confirm Password</label>
                  <input type="password" id="password2" name="password2" class="form-control"
                    placeholder="Confirm Password" value="" />
                  <label>I am 13 or older</label>
                  <input type="checkbox" id="age" name="age" class="" value="eligible" />
                  <button class="btn btn-info btn-block" type="submit">Register</button>
                  <div class="forgot">
                    <a href="/login" class="btn btn-simple btn-info">Have An Account?</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
<script src="../assets/js/jquery-1.10.2.js" type="text/javascript"></script>
<script src="../assets/js/jquery-ui-1.10.4.custom.min.js" type="text/javascript"></script>
