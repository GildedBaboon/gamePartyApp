<h1>Register</h1>

<form action="/register" method="POST">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name" value="" />
  </div>

  <div class="form-group">
    <label for="email">Email</label>
    <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" value="" />
  </div>

  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" id="password" name="password" class="form-control" placeholder="Create Password" value="" />
  </div>

  <div class="form-group">
    <label for="password2">Confirm Password</label>
    <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password"
      value="" />
  </div>

  <button type="submit" class="btn btn-primary btn-block">
    Register
  </button>
</form>
<p>Have An Account? <a href="/login">Login</a></p>
<h2 id="errors"></h2>

<script>
  var str = "{{errors}}";
  var array = str.split(',');
  array.forEach(element => document.getElementById('errors').innerHTML += element + "<br>");
</script>