<!DOCTYPE html>
<html>
  <head>
      {{> head}}
  </head>
  <body>
    {{> topnav}}
    <div id="content" style="margin-top:75px">
      <div align="center">
          <form action="gameFinder" method="get">
              <h1>Game: </h1>
              <br>
              <br>
              <select id="game" name="game" class="select-css">
                  <option value="4" selected>Just chatting</option>
                  <option value="0">League of Legends</option>
                  <option value="1">Counter Strike: Global Offensive</option>
                  <option value="2">Minecraft</option>
                  <option value="3">Rainbow Six: Siege</option>
              </select>
              <br>
              <br>
              <br>
              <br>

              <h1>Language: </h1>
              <br>
              <br>
              <select id="language" name="language" class="select-css">
                  <option value="0">Chinese</option>
                  <option value="1" selected>English</option>
                  <option value="2">Korean</option>
                  <option value="3">Russian</option>
                  <option value="4">Spanish</option>
              </select>
              <br>
              <br>
              <div class="wrap">
                  <div class="btn-6" style="margin-top: 50px" onclick="document.forms[0].submit()">find a party<span></span></div>
              </div>
              <script src="js/button.js"></script>
          </form>
      </div>
    </div>
  </body>
</html>