<!DOCTYPE html>
<html style="overflow:hidden;">
    <head>
        {{> head}}
    </head>
    <body>
        {{> topnav}}
        <div id="content" style="margin-top:50px">
            <div class="wrapper">
            <div class="gamesearch-background">
                <div class="filter-black"></div>
                <div class="container">
      <div align="center">
          <form action="gameFinder" method="get">
              <h1>Game: </h1>

              <select id="game" name="game" class="select-css" style="font-family: 'Oxygen'">
                  <option value="4" selected>Just chatting</option>
                  <option value="0">League of Legends</option>
                  <option value="1">Counter Strike: Global Offensive</option>
                  <option value="2">Minecraft</option>
                  <option value="3">Rainbow Six: Siege</option>
              </select>

              <h1>Language: </h1>
              
              <select id="language" name="language" class="select-css" style="font-family: 'Oxygen';">
                  <option value="0" selected>English</option>
                  <option value="1">Chinese (中文)</option>
                  <option value="2">Korean (한국어)</option>
                  <option value="3">Russian (русский)</option>
                  <option value="4">Spanish (Español)</option>
              </select>
              
              <div class="wrap">
                  <div class="btn-6" style="margin-top: 50px" onclick="document.forms[0].submit()">Continue<span></span></div>
              </div>
              <script src="js/button.js"></script>
          </form>
          </div>
        </div>
        </div>
      </div>
    </div>
  </body>
</html>