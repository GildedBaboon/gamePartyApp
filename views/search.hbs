<head>
    {{> head}}
</head>

<body>
    {{> topnav}}
    <section class="home"></section>

    <div align="center">
        <form action="gameFinder" method="get">
            <h1>Game: </h1>
            <select id="game" name="game">
                <option value="-1">Pick a Game:</option>
                <option value="0">League of Legends</option>
                <option value="1">CS: GO</option>
                <option value="2">Minecraft</option>
                <option value="3">Rainbow 6</option>
                <option value="4">Just Chat</option>
            </select>
            <br>

            <h1>Language: </h1>
            <select id="language">
                <option value="0">Chinese</option>
                <option value="1" selected>English</option>
                <option value="2">Korean</option>
                <option value="3">Russian</option>
                <option value="4">Spanish</option>
            </select>
            <br>
            <button type="submit">Submit</button>
        </form>
    </div>
</body>