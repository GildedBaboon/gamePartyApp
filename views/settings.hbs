<!DOCTYPE html>
<html>
    <head>
        {{> head}}
    </head>
    <body>
        {{> topnav}}
        <br>
        <h1>Update your profile</h1>
        <br>
        <form action="update_profile" method="get" style="font-size:20px;">
            <label for="name" style="color:#03DAC6">Name:</label>
            <input type="text" id="name" name="name" value="{{userD.name}}" required><br>
            <label for="email" style="color:#03DAC6">Email:</label>
            <input type="text" id="email" name="email" value="{{userD.email}}" required><br>
            <label for="display_name" style="color:#03DAC6">Display name:</label>
            <input type="text" id="display_name" name="display_name" value="{{userD.display_name}}" required><br>
            <label for="bio" style="color:#03DAC6">Bio:</label>
            <input type="text" id="bio" name="bio" value="{{userD.bio}}"><br>
            <label for="description" style="color:#03DAC6">Description:</label>
            <input type="text" id="description" name="description" value="{{userD.description}}"><br>
            <label for="discordID" style="color:#03DAC6">Discord:</label>
            <input type="text" id="discordID" name="discordID" value="{{userD.discordID}}"><br>
            <label for="steamID" style="color:#03DAC6">Steam:</label>
            <input type="text" id="steamID" name="steamID" value="{{userD.steamID}}"><br>
            <label for="blizzardID" style="color:#03DAC6">Blizzard:</label>
            <input type="text" id="blizzardID" name="blizzardID" value="{{userD.blizzardID}}"><br>
            <label for="originID" style="color:#03DAC6">Origin:</label>
            <input type="text" id="originID" name="originID" value="{{userD.originID}}"><br>
            <label for="facebookID" style="color:#03DAC6">Facebook:</label>
            <input type="text" id="facebookID" name="facebookID" value="{{userD.facebookID}}"><br>
            <label for="twitterID" style="color:#03DAC6">Twitter:</label>
            <input type="text" id="twitterID" name="twitterID" value="{{userD.twitterID}}"><br>
            <label for="epicID" style="color:#03DAC6">Epic Games:</label>
            <input type="text" id="epicID" name="epicID" value="{{userD.epicID}}"><br>
            <label for="phone" style="color:#03DAC6">Phone:</label>
            <input type="text" id="phone" name="phone" value="{{userD.phone}}"><br>
            <label for="age" style="color:#03DAC6">Age:</label>
            <input type="text" id="age" name="age" value="{{userD.age}}"><br>
            <label for="gender" style="color:#03DAC6">Gender:</label>
            <input type="text" id="gender" name="gender" value="{{userD.gender}}"><br>
            <label for="country" style="color:#03DAC6">Country:</label>
            <input type="text" id="country" name="country" value="{{userD.country}}"><br>
            <label for="profileURL" style="color:#03DAC6">Profile picture URL:</label>
            <input type="text" id="profileURL" name="profileURL" value="{{userD.profileURL}}"><br>
            <br>
            <button class="btn btn-info" type="submit">Update Settings</button>
        </form>
    </body>
</html>
