<!DOCTYPE html>
<html>
    <head>
        {{> head}}
    </head>
    <body>
        {{> topnav}}
        <div class="wrapper" style="margin-top:150px;">
            <div class="profile-background">
                <div class="filter-black"></div>
            </div>
            <div class="profile-content section-nude">
                <div class="container">
                    <div class="row owner">
                        <div class="col-md-2 col-md-offset-5 col-sm-4 col-sm-offset-4 col-xs-6 col-xs-offset-3 text-center">
                            <div class="avatar">
                                <img src="{{userD.profileURL}}" alt="Circle Image"
                                    class="img-circle img-no-padding img-responsive">
                            </div>
                            
                            
                        </div>
                    </div>
                    <div class="row">
                        <div class="name" style="font-size: 32px">
                            <h4>{{userD.display_name}}</h4>
                        </div>
                        <div class="name" style="font-size: 16px">
                            <h4><small>{{userD.description}}</small></h4>
                        </div>
                        <div class="col-md-6 col-md-offset-3 text-center">
                            <p>{{userD.bio}}</p>
                            <br>
                            <form class="register-form" action="/settings" method="GET">
                                <button class="btn btn-info" type="submit">Settings</button>
                            </form>
                        </div>
                    </div>
                    <div>
                        <h4 style="color: white">Name: {{userD.name}}</h4>
                    </div>
                    <div>
                        <h4 style="color: white;">Email: {{userD.email}}</h4>
                    </div>
                    <div class="name">
                        <h4 style="color: white;">Discord: {{userD.discordID}}</h4>
                    </div>
                    <div class="name">
                        <h4 style="color: white;">Steam: {{userD.steamID}}</h4>
                    </div>
                    <div class="name">
                        <h4 style="color: white;">Blizzard: {{userD.blizzardID}}</h4>
                    </div>
                    <div class="name">
                        <h4 style="color: white;">Origin: {{userD.originID}}</h4>
                    </div>
                    <div class="name">
                        <h4 style="color: white;">Epic: {{userD.epicID}}</h4>
                    </div>
                    <div class="name">
                        <h4 style="color: white;">Facebook: {{userD.facebookID}}</h4>
                    </div>
                    <div class="name">
                        <h4 style="color: white;">Twitter: {{userD.twitterID}}</h4>
                    </div>
                    <div class="name">
                        <h4 style="color: white;">Phone: {{userD.phone}}</h4>
                    </div>
                    <div class="name">
                        <h4 style="color: white;">Age: {{userD.age}}</h4>
                    </div>
                    <div class="name">
                        <h4 style="color: white;">Gender: {{userD.gender}}</h4>
                    </div>
                    <div class="name">
                        <h4 style="color: white;">Country: {{userD.country}}</h4>
                    </div>
                    <br>
                    <br>
                    <br>
                    <br>
                    <br>
                </div>
            </div>
        </div>
    </body>
</html>
<script src="bootstrap3/js/bootstrap.js" type="text/javascript"></script>
<script src="assets/js/ct-paper-checkbox.js"></script>
<script src="assets/js/ct-paper-radio.js"></script>
<script src="=assets/js/bootstrap-select.js"></script>
<script src="assets/js/bootstrap-datepicker.js"></script>
<script src="assets/js/ct-paper.js"></script>
<script src="assets/js/demo.js"></script>